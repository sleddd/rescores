{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "body-copy",
					"color": "#0f172a",
					"name": "Body Copy"
				},
				{
					"slug": "gray-lt",
					"color": "#f1f5f9",
					"name": "Light Background"
				}, 
				{
					"slug": "dark-bg",
					"color": "#111827",
					"name": "Dark Background"
				}, 
				{
					"slug": "gray",
					"color": "#D1D5DB",
					"name": "Gray"
				},
				{
					"slug": "gray-md",
					"color": "#9CA3AF",
					"name": "Medium Gray"
				},
				{
					"slug": "gray-dark",
					"color": "#374151",
					"name": "Dark Gray"
				},
				{
					"slug": "link-active",
					"color": "#254A87",
					"name": "Link - Active"
				},
				{
					"slug": "link-hover",
					"color": "#356BC3",
					"name": "Link - Hover"
				},
				{
					"slug": "link-visited",
					"color": "#1C3D71",
					"name": "Link - Visited"
				},
				{
					"slug": "link-focus",
					"color": "#254A87",
					"name": "Link - Focus"
				},
				{
					"slug": "mandarin-orange",
					"color": "#da804f",
					"name": "Mandarin orange"
				},
				{
					"slug": "rusty-red",
					"color": "#B25439",
					"name": "Rusty Red"
				},
				{
					"slug": "emerald-green",
					"color": "#168A97",
					"name": "Emerald Green"
				},
				{
					"slug": "gold",
					"color": "#FCB900",
					"name": "Gold"
				}
			]
		},
		"custom": {
            "fontWeight": {
                "light": 300,
				"regular": 400,
                "medium": 500,
                "semi-bold": 600,
				"bold": 700
            },
            "lineHeight": {
                "body": 1.5,
                "heading": 1.2,
                "medium": 1.5,
                "one": 1
            },
            "spacing": {
                "outer": "30px"
            }
        },
		"layout": {
			"contentSize": "80%",
			"wideSize": "80%"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"size": "10px",
					"slug": "10",
					"name": "1"
				},
				{
					"size": "15px",
					"slug": "20",
					"name": "2"
				},
				{
					"size": "25px",
					"slug": "30",
					"name": "2"
				},
				{
					"size": "30px",
					"slug": "40",
					"name": "4"
				},
				{
					"size": "35px",
					"slug": "50",
					"name": "5"
				},
				{
					"size": "40px",
					"slug": "60",
					"name": "6"
				},
				{
					"size": "45px",
					"slug": "70",
					"name": "7"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"dropCap": true,
			"fluid": true, 
			"fontFamilies": [
				{
					"fontFamily": "Cormorant Garamond",
					"name": "Cormorant Garamond",
					"slug": "cormorant-garamond",
					"fontFace": [
						{
							"fontFamily": "Cormorant Garamond",
							"fontWeight": "300",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/Cormorant/CormorantGaramond-Light.ttf"				
							]
						},
						{
							"fontFamily": "Cormorant Garamond",
							"fontWeight": "400",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/Cormorant/CormorantGaramond-Regular.ttf"				
							]
						},
						{
							"fontFamily": "Cormorant Garamond",
							"fontStyle": "normal",
							"fontWeight": "500",
							"src": [
								"file:./assets/fonts/Cormorant/CormorantGaramond-Medium.ttf"				
							]
						}, 
						{
							"fontFamily": "Cormorant Garamond",
							"fontStyle": "normal",
							"fontWeight": "600",
							"src": [
								"file:./assets/fonts/Cormorant/CormorantGaramond-SemiBold.ttf"				
							]
						}, 
						{
							"fontFamily": "Cormorant Garamond",
							"fontWeight": "700",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/Cormorant/CormorantGaramond-Bold.ttf"				
							]
						},
						{
							"fontFamily": "Cormorant Garamond",
							"fontWeight": "300",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/Cormorant/CormorantGaramond-LightItalic.ttf"				
							]
						},
						{
							"fontFamily": "Cormorant Garamond",
							"fontWeight": "400",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/Cormorant/CormorantGaramond-RegularItalic.ttf"				
							]
						},
						{
							"fontFamily": "Cormorant Garamond",
							"fontStyle": "italic",
							"fontWeight": "500",
							"src": [
								"file:./assets/fonts/Cormorant/CormorantGaramond-MediumItalic.ttf"				
							]
						}, 
						{
							"fontFamily": "Cormorant Garamond",
							"fontStyle": "italic",
							"fontWeight": "600",
							"src": [
								"file:./assets/fonts/Cormorant/CormorantGaramond-SemiBoldItalic.ttf"				
							]
						}, 
						{
							"fontFamily": "Cormorant Garamond",
							"fontWeight": "700",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/Cormorant/CormorantGaramond-BoldItalic.ttf"				
							]
						}
					]
				},
				{
					"fontFamily": "Lato",
					"name": "Lato",
					"slug": "lato",
					"fontFace": [
						{
							"fontFamily": "Lato",
							"fontWeight": "300",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/Lato/Lato-Light.ttf"				
							]
						},
						{
							"fontFamily": "Lato",
							"fontWeight": "400",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/Lato/Lato-Regular.ttf"				
							]
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/Lato/Lato-Bold.ttf"				
							]
						}, 
						{
							"fontFamily": "Lato",
							"fontStyle": "normal",
							"fontWeight": "900",
							"src": [
								"file:./assets/fonts/Lato/Lato-Black.ttf"					
							]
						},
						{
							"fontFamily": "Lato",
							"fontWeight": "300",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/Lato/Lato-LightItalic.ttf"				
							]
						},
						{
							"fontFamily": "Lato",
							"fontWeight": "400",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/Lato/Lato-Italic.ttf"				
							]
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "italic",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/Lato/Lato-BoldItalic.ttf"				
							]
						}, 
						{
							"fontFamily": "Lato",
							"fontStyle": "italic",
							"fontWeight": "900",
							"src": [
								"file:./assets/fonts/Lato/Lato-BlackItalic.ttf"					
							]
						}
					]
				}
			],
			"fontSizes": [
                {
                    "fluid": {
                        "max": "3.2rem",
                        "min": "2.9rem"
                    },
                    "name": "x-large",
                    "size": "3.2rem",
                    "slug": "x-large"
                }, 
				{
                    "fluid": {
                        "max": "2.9rem",
                        "min": "2.5em"
                    },
                    "name": "large",
                    "size": "2.9em",
                    "slug": "large"
                }, 
				{
                    "fluid": {
                        "max": "2.6rem",
                        "min": "2.4rem"
                    },
                    "name": "medium",
                    "size": "2.6rem",
                    "slug": "medium"
                }, 
				{
                    "fluid": {
                        "max": "2.2rem",
                        "min": "2rem"
                    },
                    "name": "medium-small",
                    "size": "2.2rem",
                    "slug": "medium-small"
                }, 
				{
                    "fluid": {
                        "max": "2rem",
                        "min": "1.5rem"
                    },
                    "name": "small",
                    "size": "1.5rem",
                    "slug": "small"
                }, 
				{
					"fluid": {
                        "max": "1.8rem",
                        "min": "1.3rem"
                    },
                    "name": "x-small",
                    "size": "1.3rem",
                    "slug": "x-small"
                }, 
				{
                    "name": "tiny",
                    "size": "1rem",
                    "slug": "tiny"
                }
            ]
		},
		"useRootPaddingAwareAlignments": true
	}, 
	"styles": {
		"spacing": {
			"margin": {
				"top": "1.5rem",
				"bottom": "1.5rem",
				"right": "0",
				"left": "0"
			},
            "padding": "0",
            "blockGap":"0"
		},
		"typography": {
            "fontFamily": "var(--wp--preset--font-family--cormorant-garamond)",
            "fontSize": "16px",
            "fontWeight": "var(--wp--custom--font-weight--regular)",
            "lineHeight": "var(--wp--custom--line-height--body)"
        },
		"elements": {
			"h1": {
				"typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": 100, 
					"fontFamily": "Lato", 
					"lineHeight": "1.4"           
				}			
			},
			"h2": {
				"typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": 100, 
					"fontFamily": "Lato"
                }
			},
			"h3": {
				"typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": 400, 
					"fontFamily": "Cormorant Garamond"
                }
			},
			"h4": {
				"typography": {
                    "fontSize": "var(--wp--preset--font-size--medium-small)",
					"fontWeight": 400, 
					"fontFamily": "Cormorant Garamond"
                }
			},
			"h5": {
				"typography": {
                    "fontSize": "var(--wp--preset--font-size--x-small)",
					"fontWeight": 500, 
					"fontFamily": "Cormorant Garamond"
                }
			},
			"h6": {
				"typography": {
                    "fontSize": "var(--wp--preset--font-size--tiny)",
					"fontWeight": 500, 
					"fontFamily": "Lato",
					"textTransform": "uppercase",
					"letterSpacing": "0.05rem"
                },
				"spacing": {
					"padding": {
						"top": ".45rem",
						"bottom": ".45rem"
					}
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--link-active)",
					"text": "var(--wp--preset--color--white)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--link-hover)",
						"text": "var(--wp--preset--color--white)"
					},
					"typography": {
						"textDecoration": "none"
					}
				}
			},
			"figure" : {
				"spacing" : {
					"margin" : {
						"top": "0.5rem",
						"bottom": "0.5rem",
						"left": "0",
						"right": "0"
					},
					"padding" : {
						"top": "0.5rem",
						"bottom": "0.5rem",
						"left": "0",
						"right": "0"
					}
				}
			},
			"link" : {
				"color": {
					"text": "var(--wp--preset--color--link-active)"
				},
				"typography": {
					"textDecoration": "none"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--link-hover)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--link-focus)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--link-active)"
					},
					"typography": {
						"textDecoration": "none"
					}
				}
			},
			"p": {
				"typography": {
					"fontSize": "16px"
				},
				"spacing": {
					"padding" : {
						"top": "0.5rem",
						"bottom": ".45rem",
						"right": "0",
						"left": "0"
					}
				}
			},
			"pre" : {
				"color": {
					"background" : "#f1f5f9"
				},
				"border": {
					"color": "#cbd5e1",
					"width": "1px",
					"style": "solid"
				}
			},
			"code" : {
				"color": {
					"background": "#f1f5f9"
				},
				"typography" : {
					"display": "block",
					"borderRadius": "3px"
				},
				"spacing": {
					"padding" : {
						"top":"1rem",
						"bottom": "1rem",
						"right": "1.5rem",
						"left": "1.5rem"
					},
					"margin" :  {
						"top":"1rem",
						"bottom": "1rem",
						"right": "0rem",
						"left": "0rem"
					}
				},
				"border": {
					"color": "#cbd5e1",
					"width": "1px",
					"style": "solid"
				}
			}
		},
		"blocks": {
			"core/navigation": {
                "typography": {
					"fontSize": ".85rem",
                    "textTransform": "uppercase",
					"fontFamily": "Lato, san-serif"
                },
				"elements" : {
					"link": {
						"typography" : {
							"textDecoration": "none",
							"fontFamily": "Lato, san-serif"
						},
						":hover" : {
							"typography": {
								"textDecoration": "none"
							}
						}
					}
				}
            },
			"core/site-title": {
                "typography": {
					"fontFamily": "'Lato', san-serif",
					"fontSize": "1.8rem",
					"lineHeight": "1.3"
                },
				"elements" : {
					"h1": {
						"typography": {
							"fontFamily": "'Lato', san-serif",
							"fontSize": "1.8rem",
							"lineHeight": "1.3"
						}
					},
					"link": {
						"typography": {
							"fontFamily": "'Lato', san-serif",
							"fontSize": "1.8rem",
							"lineHeight": "1.3"
						}
					}
				}
            },
			"core/site-tagline": {
                "typography": {
					"fontSize": ".85rem !important",
                    "fontStyle": "italic",
					"fontFamily": "'Lato', san-serif"
                }
            },
			"core/post-template": {
				"elements" : {
					"h2" : {
						"typography": {
							"fontFamily": "Comorant Garamond",
							"fontSize": "var(--wp--preset--font-size--medium-small)",
							"lineHeight": "1.3"
						}
					}
				}
            },
			"core/audio": {
                "spacing": {
					"padding" : {
						"top": "1rem",
						"bottom": "1rem",
						"left": "0",
						"right": "0"
					}
                }
            },
			"core/columns": {
                "spacing": {
					"blockGap": "2rem"
                }
            },
			"core/quote": {
				"spacing": {
					"padding": {
						"top": "1.5rem",
						"bottom": "1.5rem",
						"left": "1rem",
						"right": "1rem"
					}
				}
			},
			"core/pullquote": {
				"spacing": {
					"margin": {
						"top": "3rem",
						"bottom": "3rem",
						"left": "0",
						"right": "0"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}

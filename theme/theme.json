{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "body-copy",
					"color": "#0f172a",
					"name": "Body Copy"
				},
				{
					"slug": "gray-lt",
					"color": "#f1f5f9",
					"name": "Gray - Lt"
				},
				{
					"slug": "gray-md",
					"color": "#cbd5e1",
					"name": "Gray - Md"
				},
				{
					"slug": "gray-dark",
					"color": "#475569",
					"name": "Gray - Dark"
				},
				{
					"slug": "gray-darkest",
					"color": "#555555",
					"name": "Gray - Darkest"
				},
				{
					"slug": "link-active",
					"color": "#1e3a8a",
					"name": "Primary - Link Active"
				},
				{
					"slug": "link-hover",
					"color": "#357dc0",
					"name": "Primary Lt - Link Hover"
				},
				{
					"slug": "link-visited",
					"color": "#2b2788",
					"name": "Link Visited"
				},
				{
					"slug": "link-focus",
					"color": "#254a87",
					"name": "Link Focus"
				},
				{
					"slug": "secondary",
					"color": "#da804f",
					"name": "Secondary"
				},
				{
					"slug": "tertiary-red",
					"color": "#c7344c",
					"name": "Tertiary - Red"
				},
				{
					"slug": "tertiary_green",
					"color": "#25903c",
					"name": "Tertiary - Green"
				},
				{
					"slug": "gold",
					"color": "#dcb84f",
					"name": "Gold"
				},
				{
					"slug": "white",
					"color": "#fff",
					"name": "White"
				}
			]
		},
		"layout": {
			"contentSize": "80%",
			"wideSize": "80%"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"size": "10px",
					"slug": "10",
					"name": "1"
				},
				{
					"size": "15px",
					"slug": "20",
					"name": "2"
				},
				{
					"size": "25px",
					"slug": "30",
					"name": "2"
				},
				{
					"size": "30px",
					"slug": "40",
					"name": "4"
				},
				{
					"size": "35px",
					"slug": "50",
					"name": "5"
				},
				{
					"size": "40px",
					"slug": "60",
					"name": "6"
				},
				{
					"size": "45px",
					"slug": "70",
					"name": "7"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true
		}
	}, 
	"styles": {
		"spacing": {
			"margin": "false",
            "padding": "false",
            "blockGap":"null"
		},
		"elements": {
			"button": {
				"border": {
					"radius": "10px"
				},
				"color": {
					"background": "var(--wp--preset--color--link-active)",
					"text": "var(--wp--preset--color--white) !important"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--link-hover)",
						"text": "var(--wp--preset--color--white) !important"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--link-active)",
						"text": "var(--wp--preset--color--white) !important"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--link-active)",
						"text": "var(--wp--preset--color--white) !important"
					}
				},
				":visited": {
					"color": {
						"text": "var(--wp--preset--color--white) !important"
					}
				}
			},
			"h1": {
				"spacing": {
					"padding": {
						"top": "0.3rem",
						"bottom": "0.3rem",
						"right": "0",
						"left": "0"
					}
				},
				"typography": {
					"fontFamily": "'Cormorant Garamond', san-serif",
					"fontWeight": "600",
					"fontSize": "3.5rem",
					"lineHeight": "1.2"
				}
			},
			"h2": {
				"spacing": {
					"margin": {
						"top": "0rem",
						"bottom": "0em",
						"right": "0",
						"left": "0"
					},
					"padding": {
						"top": "0.5rem",
						"bottom": "0.5em",
						"right": "0",
						"left": "0"
					}
				},
				"typography": {
					"fontFamily": "'Cormorant Garamond', san-serif",
					"fontWeight": "600",
					"fontSize": "3rem",
					"lineHeight": "1.2"
				}
			},
			"h3": {
				"spacing": {
					"margin": {
						"top": "0rem",
						"bottom": "0em",
						"right": "0",
						"left": "0"
					},
					"padding": {
						"top": "0.5rem",
						"bottom": "0.5em",
						"right": "0",
						"left": "0"
					}
				},
				"typography": {
					"fontFamily": "'Cormorant Garamond', san-serif",
					"fontSize": "2.5rem"
				}
			},
			"h4": {
				"spacing": {
					"padding": {
						"top": "0.5rem",
						"bottom": "0.5em",
						"right": "0",
						"left": "0"
					}
				},
				"typography": {
					"fontFamily": "'Cormorant Garamond', san-serif",
					"fontSize": "2rem"
				}
			},
			"h5": {
				"spacing": {
					"padding": {
						"top": "0.5rem",
						"bottom": "0.5em",
						"right": "0",
						"left": "0"
					}
				},
				"typography": {
					"fontSize": "1.5rem",
					"fontWeight": "700"
				}
			},
			"h6": {
				"spacing": {
					"padding": {
						"top": "0.5rem",
						"bottom": "0.5em",
						"right": "0",
						"left": "0"
					}
				},
				"typography": {
					"fontSize": "1rem",
					"textTransform": "uppercase",
					"letterSpacing": "0.05rem"
				}
			},
			"p": {
				"spacing": {
					"margin": {
						"top": "0.5rem",
						"bottom": "0.5em",
						"right": "0",
						"left": "0"
					}
				},
				"typography": {
					"lineHeight": "1.45"
				}	
			},
			"link" : {
				"color": {
					"text": "var(--wp--preset--color--link-active)"
				},
				"typography": {
					"textDecoration": "none"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--link-hover)"
					},
					"typography": {
						"textDecoration": "underline"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--link-focus)"
					},
					"typography": {
						"textDecoration": "underline"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--link-active)"
					},
					"typography": {
						"textDecoration": "none"
					}
				}
			},
			"p" : {
				"spacing" : {
					"padding" : {
						"top" : "0.5rem",
						"bottom" : "0.5rem",
						"left" : "0",
						"right" : "0"
					}
				}
			},
			"code" : {
				"typography" : {
					"background" : "#ededed",
					"display": "block",
					"borderRadius": "4px"
				},
				"spacing": {
					"padding" : {
						"top":"1rem",
						"bottom": "1rem",
						"right": "1.5rem",
						"left": "1.5rem"
					},
					"margin" :  {
						"top":"1rem",
						"bottom": "1rem",
						"right": "0rem",
						"left": "0rem"
					}
				}
			}
		},
		"blocks": {
			"core/navigation": {
                "typography": {
					"fontSize": ".85rem",
					"letterSpacing": "0.0rem",
                    "textTransform": "uppercase"
                },
				"elements" : {
					"link": {
						"typography" : {
							"textDecoration": "none"
						},
						":hover" : {
							"typography": {
								"textDecoration": "none"
							}
						}
					}
				}
            },
			"core/site-title": {
                "typography": {
					"fontSize": "1.5rem !important",
					"letterSpacing": "0.0rem"
                },
				"elements" : {
					"h1": {
						"typography": {
							"fontFamily": "'Lato', san-serif"
						}
					},
					"link": {
						"typography": {
							"fontFamily": "'Lato', san-serif"
						}
					}
				}
            },
			"core/site-tagline": {
                "typography": {
					"fontSize": ".85rem",
					"letterSpacing": "0.0rem",
                    "fontStyle": "italic",
					"lineHeight":"1.3"
                }
            }
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}

{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "body-copy",
					"color": "#0f172a",
					"name": "Body Copy"
				},
				{
					"slug": "gray-lt",
					"color": "#f1f5f9",
					"name": "Gray - Lt"
				},
				{
					"slug": "gray-md",
					"color": "#cbd5e1",
					"name": "Gray - Md"
				},
				{
					"slug": "gray-dark",
					"color": "#475569",
					"name": "Gray - Dark"
				},
				{
					"slug": "link-active",
					"color": "#1e3a8a",
					"name": "Primary - Link Active"
				},
				{
					"slug": "link-hover",
					"color": "#357dc0",
					"name": "Primary Lt - Link Hover"
				},
				{
					"slug": "link-visited",
					"color": "#2b2788",
					"name": "Link Visited"
				},
				{
					"slug": "link-focus",
					"color": "#254a87",
					"name": "Link Focus"
				},
				{
					"slug": "secondary",
					"color": "#da804f",
					"name": "Secondary"
				},
				{
					"slug": "tertiary-red",
					"color": "#c7344c",
					"name": "Tertiary - Red"
				},
				{
					"slug": "tertiary_green",
					"color": "#25903c",
					"name": "Tertiary - Green"
				},
				{
					"slug": "gold",
					"color": "#dcb84f",
					"name": "Gold"
				},
				{
					"slug": "white",
					"color": "#fff",
					"name": "White"
				}
			]
		},
		"layout": {
			"contentSize": "80%",
			"wideSize": "80%"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"size": "10px",
					"slug": "10",
					"name": "1"
				},
				{
					"size": "15px",
					"slug": "20",
					"name": "2"
				},
				{
					"size": "25px",
					"slug": "30",
					"name": "2"
				},
				{
					"size": "30px",
					"slug": "40",
					"name": "4"
				},
				{
					"size": "35px",
					"slug": "50",
					"name": "5"
				},
				{
					"size": "40px",
					"slug": "60",
					"name": "6"
				},
				{
					"size": "45px",
					"slug": "70",
					"name": "7"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true
		}
	}, 
	"styles": {
		"elements": {
			"button": {
				"border": {
					"radius": "10px"
				},
				"color": {
					"background": "var(--wp--preset--color--link-active)",
					"text": "var(--wp--preset--color--white) !important"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--link-hover)",
						"text": "var(--wp--preset--color--white) !important"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--link-active)",
						"text": "var(--wp--preset--color--white) !important"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--link-active)",
						"text": "var(--wp--preset--color--white) !important"
					}
				},
				":visited": {
					"color": {
						"text": "var(--wp--preset--color--white) !important"
					}
				}
			},
			"h1": {
				"typography": {
					"fontWeight": "600",
					"fontSize": "3.5rem",
					"lineHeight": "1.2",
					"a": {
						"fontWeight": "600"

					}
				}
			},
			"h2": {
				"typography": {
					"fontWeight": "600",
					"fontSize": "3rem",
					"lineHeight": "1.2",
					"marginTop": "1.5rem",
					"marginBottom": "1.5rem"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "2.5rem"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "2rem"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "1.5rem",
					"fontWeight": "700",
					"textTransform": "uppercase"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "1rem",
					"textTransform": "uppercase"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "400",
					"lineHeight": "1.4"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--link-active)"
				},
				"typography": {
					"textDecoration": "none"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--link-hover)"
					},
					"typography": {
						"textDecoration": "underline"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--link-focus)"
					},
					"typography": {
						"textDecoration": "underline"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--link-active)"
					},
					"typography": {
						"textDecoration": "none"
					}
				}
			}
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--10)"
		}
	}
}
